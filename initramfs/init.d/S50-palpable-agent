#!/bin/sh
#
# Palpable Agent Service
# Manages the Node.js runtime for device functionality
#

AGENT_DIR="/opt/palpable"
AGENT_BIN="$AGENT_DIR/palpable-agent"
AGENT_LOG="/var/log/palpable-agent.log"
PID_FILE="/var/run/palpable-agent.pid"

start() {
    log_step "Starting Palpable agent"

    if [ ! -x "$AGENT_BIN" ]; then
        log_warning "Agent binary not found, running in bootstrap-only mode"
        return 0
    fi

    # Export environment
    export DEVICE_ID
    export DEVICE_NAME
    export PALPABLE_API_URL="https://api.palpable.technology"
    export NODE_ENV="production"

    # Start agent
    "$AGENT_BIN" >> "$AGENT_LOG" 2>&1 &
    echo $! > "$PID_FILE"

    log_ok "Agent started (PID: $(cat $PID_FILE))"
}

stop() {
    if [ -f "$PID_FILE" ]; then
        kill $(cat "$PID_FILE") 2>/dev/null
        rm -f "$PID_FILE"
        log_ok "Agent stopped"
    fi
}

restart() {
    stop
    sleep 1
    start
}

status() {
    if [ -f "$PID_FILE" ] && kill -0 $(cat "$PID_FILE") 2>/dev/null; then
        echo "Palpable agent is running (PID: $(cat $PID_FILE))"
        return 0
    else
        echo "Palpable agent is not running"
        return 1
    fi
}

case "$1" in
    start) start ;;
    stop) stop ;;
    restart) restart ;;
    status) status ;;
    *) start ;;
esac
